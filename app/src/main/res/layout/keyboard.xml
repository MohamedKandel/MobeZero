<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_12sdp"
    android:paddingBottom="@dimen/_12sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/txt_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:background="@null"
        android:digits="+0123456789"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/dial_color"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintEnd_toStartOf="@+id/delete_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_12sdp"
        android:padding="@dimen/_7sdp"
        android:src="@drawable/delete_icon"
        app:layout_constraintBottom_toBottomOf="@+id/txt_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_number" />

    <GridLayout
        android:id="@+id/keyboard_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_number">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1">

            <TextView
                android:id="@+id/txt_number_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/keyboard_color"
                android:textSize="@dimen/_24ssp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/txt_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1">

            <TextView
                android:id="@+id/txt_number_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/keyboard_color"
                android:textSize="@dimen/_24ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_number_2"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="ABC"
                android:textColor="@color/alphabet_color"
                android:textSize="@dimen/_13ssp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/txt_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1">

            <TextView
                android:id="@+id/txt_number_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/keyboard_color"
                android:textSize="@dimen/_24ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_number_3"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="DEF"
                android:textColor="@color/alphabet_color"
                android:textSize="@dimen/_13ssp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/txt_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1">

            <TextView
                android:id="@+id/txt_number_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/keyboard_color"
                android:textSize="@dimen/_24ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_number_4"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="GHI"
                android:textColor="@color/alphabet_color"
                android:textSize="@dimen/_13ssp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/txt_five"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1">

            <TextView
                android:id="@+id/txt_number_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/keyboard_color"
                android:textSize="@dimen/_24ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_number_5"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="JKL"
                android:textColor="@color/alphabet_color"
                android:textSize="@dimen/_13ssp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/txt_six"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1">

            <TextView
                android:id="@+id/txt_number_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/keyboard_color"
                android:textSize="@dimen/_24ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_number_6"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="MNO"
                android:textColor="@color/alphabet_color"
                android:textSize="@dimen/_13ssp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/txt_seven"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1">

            <TextView
                android:id="@+id/txt_number_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/keyboard_color"
                android:textSize="@dimen/_24ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_number_7"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="PQRS"
                android:textColor="@color/alphabet_color"
                android:textSize="@dimen/_13ssp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/txt_eight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1">

            <TextView
                android:id="@+id/txt_number_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/keyboard_color"
                android:textSize="@dimen/_24ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_number_8"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="TUV"
                android:textColor="@color/alphabet_color"
                android:textSize="@dimen/_13ssp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/txt_nine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1">

            <TextView
                android:id="@+id/txt_number_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/keyboard_color"
                android:textSize="@dimen/_24ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_number_9"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="WXYZ"
                android:textColor="@color/alphabet_color"
                android:textSize="@dimen/_13ssp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_ast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="*"
            android:textColor="@color/keyboard_color"
            android:textSize="@dimen/_24ssp" />

        <RelativeLayout
            android:id="@+id/txt_zero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1">

            <TextView
                android:id="@+id/txt_number_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/keyboard_color"
                android:textSize="@dimen/_24ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_number_0"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/alphabet_color"
                android:textSize="@dimen/_13ssp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_hash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="#"
            android:textColor="@color/keyboard_color"
            android:textSize="@dimen/_24ssp" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>