<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_12sdp"
    android:layout_marginEnd="@dimen/_12sdp"
    android:layout_marginBottom="@dimen/_6sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/gradient_circle"
        android:id="@+id/img_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/img_name"
        app:layout_constraintBottom_toBottomOf="@id/img_name"
        app:layout_constraintStart_toStartOf="@id/img_name"
        app:layout_constraintEnd_toEndOf="@id/img_name"
        android:text="MH"
        android:textColor="@color/white"
        android:fontFamily="@font/barlow_semi_bold"
        android:textSize="@dimen/_13ssp"
        android:id="@+id/txt_name"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/img_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/calling_icon"
        android:maxLines="1"
        android:id="@+id/txt_contact_name"
        android:text="Mohamed Hossam"
        android:fontFamily="@font/inter_semi_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        android:layout_marginStart="@dimen/_6sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_number"
        app:layout_constraintTop_toBottomOf="@id/txt_contact_name"
        app:layout_constraintStart_toEndOf="@id/img_name"
        android:text="01234567890"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_4sdp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/calling_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/calling_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>